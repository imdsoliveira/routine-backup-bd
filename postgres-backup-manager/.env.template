# .env.template

# Usuário do PostgreSQL para backups
PG_USER="postgres"

# Senha do usuário PostgreSQL
PG_PASSWORD="sua_senha_postgres"

# Período de retenção dos backups em dias
RETENTION_DAYS="30"

# URL do Webhook para notificações
WEBHOOK_URL="https://seu-webhook-url.com"

# Opção de backup
# 1: Backup completo do banco de dados
BACKUP_OPTION="1"

# Diretório de backup no host
BACKUP_DIR="/var/backups/postgres"

# Arquivo de log
LOG_FILE="/var/log/backup_postgres.log"
